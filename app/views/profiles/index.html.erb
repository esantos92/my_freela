<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Monthly budget</th>
      <th>Value hour</th>
      <th>Days per week</th>
      <th>Hours per day</th>
      <th>Github profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user %></td>
        <td><%= profile.monthly_budget %></td>
        <td><%= profile.value_hour %></td>
        <td><%= profile.days_per_week %></td>
        <td><%= profile.hours_per_day %></td>
        <td><%= profile.github_profile %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

